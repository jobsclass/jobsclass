# Supabase (필수)
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# JWT Secret (필수) - 32자 이상의 랜덤 문자열
# 생성: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your_jwt_secret_key_32_characters_minimum

# App URL (필수)
# 로컬: http://localhost:3000
# 프로덕션: https://your-domain.vercel.app
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Toss Payments (선택 - 결제 기능 사용 시)
NEXT_PUBLIC_TOSS_CLIENT_KEY=test_ck_your_test_key
TOSS_SECRET_KEY=test_sk_your_test_secret_key
